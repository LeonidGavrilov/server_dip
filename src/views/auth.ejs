<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <div class="container">
        <div class="auth">
            <div class="row">
                <div class="col s12">
                    <ul class="tabs">
                        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
                        <li class="tab col s6"><a href="#register">Зарегаться</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div id="login" class="col s6 offset-s3">
            <% if(loginError) { %>
                <p class="alert">
                    <%= loginError %>
                </p>
                <% } %>
                    <h3>Аутентификация</h3>
                    <form action="/api/auth/login" method="POST">
                        <div class="input-field">
                            <input placeholder="placeholder" name="email" id="email" type="email" class="validate"
                                required>
                            <label for="email">Email</label>
                            <span class="helper-text" data-error="Write an Email"></span>
                        </div>
                        <div class="input-field">
                            <input placeholder="placeholder" name="password" id="password" type="password"
                                class="validate" required>
                            <label for="password">Password</label>
                            <span class="helper-text" data-error="Write an Password"></span>
                        </div>
                        <!-- <input type="hidden" name="_csrf" value="{{csurf}}"> -->
                        <p><a href="/api/auth/reset">Forgot password?</a></p>
                        <button class="btn btn-primary" type="submit">
                            Войти
                        </button>
                    </form>
        </div>

        <div id="register" class="col s6 offset-s3">
            <% if(registerError) { %>
                <p class="alert">
                    <%= registerError %>
                </p>
                <% } %>
                    <h3>Регистрация</h3>
                    <form action="/api/auth/register" method="POST">
                        <div class="input-field">
                            <input placeholder="placeholder" name="name" id="name" type="text" class="validate"
                                required>
                            <label for="name">Name</label>
                            <span class="helper-text" data-error="Write an Name"></span>
                        </div>
                        <div class="input-field">
                            <input placeholder="placeholder" name="email" id="regemail" type="email" class="validate"
                                required>
                            <label for="regemail">Email</label>
                            <span class="helper-text" data-error="Write an Email"></span>
                        </div>
                        <div class="input-field">
                            <input placeholder="placeholder" name="password" id="regpassword" type="password"
                                class="validate" required>
                            <label for="regpassword">Password</label>
                            <span class="helper-text" data-error="Write an Password"></span>
                        </div>
                        <div class="input-field">
                            <input placeholder="placeholder" name="confirmpassword" id="confirmpassword" type="password"
                                class="validate" required>
                            <label for="confirmpassword">Password confirm</label>
                            <span class="helper-text" data-error="Write an Password confirm"></span>
                        </div>
                        <button class="btn btn-primary" type="submit">
                            Зарегистрироваться
                        </button>
                    </form>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        M.Tabs.init(document.querySelectorAll(".tabs"));
    </script>
    <style>
        .nav-wrapper {
            padding: 0 2rem;
        }

        .price {
            font-size: 2rem;
        }

        .course {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .course h1 {
            margin-bottom: 2rem;
        }

        .course img {
            max-width: 600px;
            height: auto;
        }

        .course .price.big {
            font-size: 2rem;
        }

        .card-action.actions {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .course-form {
            margin-bottom: 2rem;
        }

        .auth {
            padding-top: 1rem;
        }

        .alert {
            padding: 0.5rem 1rem;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 1rem;
            background: rgba(255, 0, 0, 0.3);
            color: red;
        }

        .avatar {
            width: 250px;
            height: auto;
            border-radius: 50%;
            border-width: 6px;
            border-style: groove;
            border-color: pink;
        }
    </style>
</body>

</html>